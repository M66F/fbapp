<%# HTML %>
<%# the Heading %>
<div id = "Heading" class="heading">
  <h1><%-title %></h1></div>

<%# search field on the left and twitter newsfeed on the right%>
<div id = "searchAndTwitter">
	<input type="text" id="searchText" onkeydown="createPlayerList()"> <button id="speechButton" onclick="startSpeechRecognition(event)">
    <img id='speechImage' src="/static/img/mic.gif" title="Starte die Spracheingabe"></button>
	<LABEL>----twitter zeug----</LABEL>
</div>
<%# these will be filled by index.controller.js with players %>
<div id="playerColumn" class ="playerColumn" style = 'float: left;margin: 30px;'></div>

<%# container with details of players in the middle, it accepts drop events of player images %>
<div id="details" class ="details" ondrop="drop(event)" ondragover="allowDrop(event)">
	<div id="textDetails"></div>

</div>

<%# column on the right with LiveTicker, Login and Websocket Chat %>
<div id="rightColumn" class = "rightColumn">

	<div id="liveTicker" class = "liveTicker">LiveTicker</div>

	<div id="login" class = "login">
		<p>Login:</p> <br>
		<button class="socialButton">Login with Facebook</button>
		<button class="socialButton">Login with Twitter</button>
	</div>

	<div id= "chat" class = "chat">Websocket Chat</div>

</div>



